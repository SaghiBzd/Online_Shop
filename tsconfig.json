{
  "compilerOptions": {
    "target": "ES6",                      // Target modern JavaScript features
    "lib": ["DOM", "DOM.Iterable", "ES6"], // Include DOM and ES6 features
    "jsx": "react-jsx",                   // Enable React JSX (use "react" for older React versions)
    "module": "ESNext",                   // Use ESNext modules for modern imports
    "moduleResolution": "node",           // Resolve modules like Node.js
    "strict": true,                       // Enable all strict type-checking options
    "esModuleInterop": true,              // Allow default imports from CommonJS modules
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file casing
  },
  "include": ["src/**/*"],                // Include all files in the src directory
  "exclude": ["node_modules", "dist"]     // Exclude build and dependency directories
}
